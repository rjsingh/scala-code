  /**
   * Exercise 2
   */
  def balance(chars: List[Char]): Boolean = {
    
    def loop(acc, chars: List[Char]): Int = {
      if (chars.isEmpty) 0 else if (chars.head == '(') 1 + balanced(chars.tail) else 
        if (chars.head == ')') -1 + balanced(chars.tail) else 0 + balanced(chars.tail)
    }
    									
    balanced(chars) >= 0
  }

